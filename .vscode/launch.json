{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "profile": "debug",
      "keepProfileChanges": true,
      "pathMappings": [
        {
          "url": "http://localhost:8080/_nuxt",
          "path": "${workspaceFolder}/frontend/src"
        }
      ]
    },
    {
      "name": "bun attach",
      "type": "bun",
      "request": "attach",
      "url": "ws://localhost:6499/",
    }
  ]
}
