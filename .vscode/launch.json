{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "profile": "debug",
      "keepProfileChanges": true,
      "pathMappings": [
        {
          "url": "http://localhost:8080/_nuxt",
          "path": "${workspaceFolder}/frontend/src"
        }
      ]
    },
    {
      "name": "bun attach",
      "type": "bun",
      "request": "attach",
      "url": "ws://localhost:6499/"
    },
    {
      "name": "chat:api",
      "type": "node",
      "request": "launch",
      "runtimeVersion": "20",
      "runtimeExecutable": "npm",
      "args": ["run", "dev"],
      "cwd": "${workspaceFolder}/chat/api",
      "console": "integratedTerminal"
    },
    {
      "name": "chat:fe | browser",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/chat/fe",
      "keepProfileChanges": true,
      "profile": "debug",
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}/chat/fe"
        }
      ]
    }
  ]
}
