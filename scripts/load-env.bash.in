#!/usr/bin/env bash

[ -z "$ENVIRONMENT" ] && ENVIRONMENT="$(tem var env)"

print_and_eval() {
    echo "$1"
    eval "$1"
}

load_envvars_from_file() {
    for file in "$@"; do
        print_and_eval "$(sed 's/^.\+=.\+/export &/' "$file")"
    done
}

for file in \
    .env/common \
    .env/staging \
    .env/"$ENVIRONMENT"{,.secret} \
    worker/.env/common \
    worker/.env/"$ENVIRONMENT"{,.secret}
do
    [ -f "$file" ] && load_envvars_from_file "$file"
done
